"""
TessGyz:
    Calculate the YZ component of the gravity gradient tensor field of a
    tesseroid model.
"""
################################################################################
# Created on 6-May-2009 10:05 PM
# Last modified by $Author: leouieda $
__author__ = 'Leonardo Uieda (leouieda@gmail.com)'
__version__ = '$Revision: 49 $'
__date__ = '$Date: 2009-08-25 16:19:52 +0200 (Tue, 25 Aug 2009) $'
__copyright__ = "Copyright (C) 2009  Leonardo Uieda"
__license__ = "GPL"
################################################################################

import os
import sys

from tesseroids_lib.tessgravmain import Main
import tesseroids_lib.tesseroidgravity as tg

if __name__ == '__main__':

    name = 'TessGyz'
    description = "  Calculates the YZ component of the gravity gradient " + \
                  "tensor generated by a tesseroid model."

    main = Main(name, description, sys.argv, tg.TesseroidGyz)
    main.start()
    sys.exit()
