"""
TessGxz:
    Calculate the XZ component of the gravity gradient tensor field of a
    tesseroid model.
"""
################################################################################
# Created on 6-May-2009 10:05 PM
# Last modified by $Author$
__author__ = 'Leonardo Uieda (leouieda@gmail.com)'
__version__ = '$Revision$'
__date__ = '$Date$'
__copyright__ = "Copyright (C) 2009  Leonardo Uieda"
__license__ = "GPL"
################################################################################

import os
import sys

# Get the path of where the program is
mypath = os.path.abspath(os.path.dirname(sys.argv[0]))
# Get the path os the mods
tmp = mypath + os.path.sep + 'mods'
modspath = os.path.abspath(tmp)
# Add this path to the sys.path so that the modules can be imported
sys.path.append(modspath)
# Now the mod can be imported
from tessgravmain import Main
import tesseroidgravity as tg

if __name__ == '__main__':

    name = 'TessGxz'
    description = "  Calculates the XZ component of the gravity gradient " + \
                  "tensor generated by a tesseroid model."

    main = Main(name, description, sys.argv, tg.TesseroidGxz, version='0.1')
    main.start()
    sys.exit()
