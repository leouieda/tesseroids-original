import os
import sys

from tesseroids_lib.tessgravmain import Main
import tesseroids_lib.tesseroidgravity as tg

if __name__ == '__main__':

    name = 'TessPot'
    description = "  Calculates the gravitational potential generated by a " + \
                  "tesseroid model."

    main = Main(name, description, sys.argv, tg.TesseroidPotential)
    main.start()
    sys.exit()
